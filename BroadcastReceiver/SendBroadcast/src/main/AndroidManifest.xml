<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.udea.compumovil.sendlocalbroadcast">

    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="co.edu.udea.compumovil.sendlocalbroadcast.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="co.edu.udea.compumovil.sendlocalbroadcast.MyReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="co.edu.udea.compumovil.custombroadcast.action.CUSTOM" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
